
typedef enum {
	MT_INT,
	MT_STRING,
	MT_IMAGE	
} MAUIType;

class MAUIQueryResult {
	virtual BOOL first();
	virtual BOOL absolute(int n);
	virtual BOOL next();
	virtual BOOL previous();
	virtual char* getString(char* columnName);
	virtual int getInt(char* columnName);
	virtual Handle getImage(char* columnName);
	virtual int getColumnCount();
	virtual MAUIType getType(int column);
	virtual char* getColumnName(int column);
	virtual int getColumnIndex(char* columnName);
};